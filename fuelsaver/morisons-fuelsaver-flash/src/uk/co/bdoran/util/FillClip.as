package uk.co.bdoran.util {		/*	  Copyright (c) 2009, Benjamin Doran	  All rights reserved.	 */	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.display.Stage;	import flash.geom.Point;	/**	 * 	Class provides drawing mechanisms for filling display object with a 	 * 	single colour at any alpha. Used for spacing and sizeing in Flash.	 * 		 * 	@langversion ActionScript 3.0	 *	@playerversion Flash 9.0	 *	@tiptext	 */		public class FillClip {				/**		 * Fills a clip using the graphics functions with a color fill.		 * By default fills the clip with a black fill with alpha 0.		 * 		 * @param target Sprite that requires the fill.		 * @param width Width of the fill.		 * @param height Height of the fill.		 * @param alpha Alpha value for the fill (defaults 0).		 * @param color Color of the fill (defauls Black 0x000000).		 */				public static function fillClip( target : Sprite, width : int, height : int, alpha : Number = 0, color : uint = 0x000000, position : Point = null ) : void {			if(!position){				position = new Point(0,0);			}			target.graphics.beginFill( color, alpha );			target.graphics.drawRect(position.x, position.y, width, height);			target.graphics.endFill();		}				/**		 * Fills a clip using the graphics functions with a color fill.		 * based on another display objects dimensions.		 * 		 * @param target Sprite that requires the fill.		 * @param template DisplayObject that the fill is based on, uses the width, 		 * height and positioning of the element. Can be of type <code>Stage</code>.		 * @param alpha Alpha value for the fill (defaults 0).		 * @param color Color of the fill (defauls Black 0x000000).		 */		 public static function fillClipWithClipDimentions(target:Sprite, template:DisplayObject, alpha : Number = 0, color : uint = 0x000000):void{		 	var templateWidth : int = template is Stage ? Stage(template).stageWidth: template.width; 		 	var templateHeight : int = template is Stage ? Stage(template).stageHeight: template.height; 			FillClip.fillClip(target, templateWidth, templateHeight, alpha, color, new Point(template.x, template.y));					 			 }	}}