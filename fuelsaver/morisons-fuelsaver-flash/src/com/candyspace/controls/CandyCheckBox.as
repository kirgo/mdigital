------------------------		// Methods - Public		// --------------------------------------				public function get selected():Boolean		{			return _selected;		}				public function set selected(value:Boolean):void		{			_selected = value;						updateDisplay();		}						// --------------------------------------		// Methods - Protected		// --------------------------------------				protected function updateDisplay():void		{			_tick.visible = _selected;					}				// --------------------------------------		// Event handlers		// --------------------------------------		private function onClick(event:MouseEvent):void		{			_selected = !_selected;						updateDisplay();									dispatchEvent(new CandyControlEvent(CandyControlEvent.SELECTION_CHANGE, String(_selected)));		}	}}