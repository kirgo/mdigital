eturn _enabled;		}				public function set isEnabled(value:Boolean):void		{			_enabled = value;						updateDisplay();		}						// --------------------------------------		// Methods - Protected		// --------------------------------------				protected function updateDisplay():void		{			_enableState.visible = _enabled;						_disableState.visible = !_enabled;				}				// --------------------------------------		// Methods - Overriden		// --------------------------------------		// --------------------------------------		// Methods - Public		// --------------------------------------		// --------------------------------------		// Event handlers - Overriden		// --------------------------------------		// --------------------------------------		// Event handlers		// --------------------------------------	}}